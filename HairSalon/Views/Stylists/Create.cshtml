@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
<main class="container">
  <h2>Add A New Stylist</h2>
  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new { @class="form-control" })

    @Html.LabelFor(model => model.EmploymentDate)
    @Html.TextBoxFor(model => model.EmploymentDate,
  new { @type = "date" , @value = DateTime.Today, @class="form-control" })

    @Html.LabelFor(model => model.ContactNum)
    @Html.TextBoxFor(model => model.ContactNum,
  new { @class="form-control" })
    @Html.LabelFor(model => model.Schedule)
    @Html.TextBoxFor(model => model.Schedule, new { @class="form-control" })

    <input class="btn btn-dark" type="submit" value="Add new stylist" role="button" class="btn btn-dark" />

  }
  @* <p>@Html.ActionLink("Show all stylists", "Index")</p> *@
  <a class="btn btn-dark" href='@Url.Action("Index", "Stylists")' role="button" type="button">Show All Stylists</a>

</main>