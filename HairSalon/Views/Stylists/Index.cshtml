@{
  Layout = "_Layout";
}

@using HairSalon.Models;
<main class="container">
  <h1>Eau Claire's Stylists</h1>

  @if (@Model.Count == 0)
  {
    <h3>No categories have been added yet!</h3>
  }
  else
  {
    @foreach (Stylist stylist in Model)
    {
      <div class="col-md-4 result">
        <h3><a href='/stylists/details/@stylist.StylistId'>@stylist.Name</a></h3>
        <p>Contact Number: @stylist.ContactNum
          <br>Schedule: @stylist.Schedule
        </p>
        <a class="btn, btn-dark" href='/stylists/details/@stylist.StylistId'>View Stylist Details</a>
      </div>

    }
  }
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-6">
        <a type="button" class="btn btn-dark" role="button" href='@Url.Action("Create", "Stylists")'>Add New Stylist</a>
      </div>
      <div class="col-md-6">
        <a class="btn btn-dark" href='@Url.Action("Index", "Home")' role="button" type="button">Back To Home</a>
      </div>
    </div>
  </div>
</main>