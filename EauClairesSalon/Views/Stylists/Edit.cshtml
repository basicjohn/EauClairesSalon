@{
  Layout = "_Layout";
}

@model EauClairesSalon.Models.Stylist
<main class="container">
  <h2>Edit</h2>

  <h4>Edit this stylist: @Html.DisplayFor(model => model.Name)</h4>

  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.StylistId)

    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)

    @Html.LabelFor(model => model.EmploymentDate)
    @Html.TextBoxFor(model => model.EmploymentDate,
  new { @type = "date" , @value = DateTime.Now })

    @Html.LabelFor(model => model.ContactNum)
    @Html.TextBoxFor(model => model.ContactNum)

    @Html.LabelFor(model => model.Schedule)
    @Html.TextBoxFor(model => model.Schedule)

    <input type="submit" value="Save" />
  }
  <p>@Html.ActionLink("Back to list", "Index")</p>
</main>